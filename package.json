{
  "name": "lyceeconnecte",
  "version": "1.0.0",
  "description": "LycéeConnecté Windows App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack:osx": "electron-packager . LycéeConnecté --out=dist/osx --platform=darwin --arch=x64 && npm run codesign --overwrite",
    "pack:win32": "electron-packager . LycéeConnecté --out=dist/win --platform=win32 --arch=ia32 --icon=./resources/images/icon64.ico --overwrite",
    "pack:win64": "electron-packager . LycéeConnecté --out=dist/win --platform=win32 --arch=x64 --version=0.36.2 app-version=1.0 --icon=./resources/images/icon64.ico --overwrite",
    "build": "npm run pack:win32 && npm run pack:win64"
  },
  "author": "Catsuri33",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^15.0.0",
    "electron-packager": "^15.4.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "lyceeconnecte"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
